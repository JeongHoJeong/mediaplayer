<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/directoryIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_folder_black_24dp"
        android:layout_centerVertical="true"
    />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/directoryIcon"
        android:layout_toEndOf="@id/directoryIcon"
        android:gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
    >
        <TextView
            android:id="@+id/directoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
        />
        <TextView
            android:id="@+id/directoryNumContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/directoryName"
            android:textSize="12sp"
        />
    </RelativeLayout>
</RelativeLayout>